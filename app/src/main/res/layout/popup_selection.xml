<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/largepadding"
        android:layout_marginLeft="@dimen/largepadding"
        android:text="Fill Your Requirements"
        android:textColor="@color/black"
        android:textSize="@dimen/largenormaltextsize" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/largepadding"
        android:layout_marginTop="@dimen/largepadding"
        android:background="@color/lightblack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height35"
        android:layout_margin="@dimen/largepadding"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:text="Room"
            android:textColor="@color/black"
            android:textSize="@dimen/largenormaltextsize" />

        <LinearLayout
            android:id="@+id/roomminus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_rectangle_blue">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/smallpadding"
                android:src="@drawable/icon_minus" />

        </LinearLayout>

        <TextView
            android:id="@+id/roomtext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/largenormaltextsize" />

        <LinearLayout
            android:id="@+id/roomadd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_rectangle_blue">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/normalpadding"
                android:src="@drawable/icon_add" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightblack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height35"
        android:layout_margin="@dimen/largepadding"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:text="Adult"
            android:textColor="@color/black"
            android:textSize="@dimen/largenormaltextsize" />

        <LinearLayout
            android:id="@+id/adultminus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_rectangle_blue">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/smallpadding"
                android:src="@drawable/icon_minus" />

        </LinearLayout>

        <TextView
            android:id="@+id/adulttext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/largenormaltextsize" />

        <LinearLayout
            android:id="@+id/adultadd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_rectangle_blue">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/normalpadding"
                android:src="@drawable/icon_add" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightblack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height35"
        android:layout_margin="@dimen/largepadding"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:text="Children"
            android:textColor="@color/black"
            android:textSize="@dimen/largenormaltextsize" />

        <LinearLayout
            android:id="@+id/childminus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_rectangle_blue">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/smallpadding"
                android:src="@drawable/icon_minus" />

        </LinearLayout>

        <TextView
            android:id="@+id/childtext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/largenormaltextsize" />

        <LinearLayout
            android:id="@+id/childadd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/custom_rectangle_blue">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/normalpadding"
                android:src="@drawable/icon_add" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightblack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height35"
        android:layout_marginTop="@dimen/largepadding"
        android:orientation="horizontal"
        android:weightSum="3">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="@color/black"
                android:textSize="@dimen/largenormaltextsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="APPLY"
                android:textColor="@color/black"
                android:textSize="@dimen/largenormaltextsize" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>