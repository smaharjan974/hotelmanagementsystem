<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/extralargeheight"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/hotel"
            android:layout_weight="0.8"
            android:background="@color/black"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="@color/grey"
            >

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/> //0.3 out of 5

            <TextView
                android:id="@+id/hotelname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="MUM'S GARDEN RESORT"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textSize="@dimen/extranormaltextsize"
                android:textColor="@color/lightblue"
                />  //1.3 out of 5

            <LinearLayout
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:src="@drawable/icon_maps_black"
                    android:padding="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:text="KATHMANDU"
                    android:id="@+id/address"
                    android:gravity="center|left"
                    android:textSize="@dimen/extranormaltextsize"
                    android:textColor="@color/red"
                    />

            </LinearLayout> // 2.3 out of 5

            <LinearLayout
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="3"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:background="@color/lightdarkblue"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/rate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="8.5"
                        android:textSize="@dimen/normaltextsize"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/graderate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.25"
                    android:gravity="center|right"
                    android:text="EXCELLENT"
                    android:textSize="@dimen/normaltextsize"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/reviews"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.35"
                    android:text="(183 reviews)"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/smallpadding"
                    android:textSize="@dimen/normaltextsize"
                    />

            </LinearLayout> //3.3 out of 5

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                />  // 4 out of 5

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <LinearLayout
                    android:id="@+id/deal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/largepadding"
                    android:background="@color/blue"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="VIEW DEAL"
                        android:textSize="@dimen/largenormaltextsize"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>