<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sanjay.traveljinee.Booking.Verification.VerificationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/normalpadding"
            >

            <TextView
                android:id="@+id/hotelname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel Name"
                android:textSize="@dimen/largenormaltextsize"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/largepadding"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/largepadding"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Payment Id : "
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/payid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Transaction Id :"
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/transactionid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Check-In Date :"
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/checkindate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/largepadding"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Check-Out Date :"
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/checkoutdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/largepadding"
                android:layout_marginBottom="@dimen/largepadding"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Total Amount :"
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:textSize="@dimen/largenormaltextsize"
                    android:textColor="@color/black"/>

            </LinearLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Payment is successfully done. Payment Successfully Details has been Send to your Email. Verify Email to make Sure."
                android:textSize="@dimen/largenormaltextsize"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/largepadding"
                android:layout_marginBottom="@dimen/largepadding"
                android:padding="@dimen/smallpadding"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank You for Using TravelJinee.com !!!"
                android:textSize="@dimen/largenormaltextsize"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/largepadding"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
